{
  "name": "@m3-moretv/smogger",
  "version": "1.1.3",
  "description": "Mock server for OpenAPI v3 spec",
  "main": "./lib/index.js",
  "bin": "./lib/bin.js",
  "scripts": {
    "build": "tsc src/ -d lib/ --source-maps",
    "build:prod": "NODE_ENV=production npm run build",
    "build:dev": "NODE_ENV=development npm run build -- --watch",
    "test": "NODE_ENV=test jest",
    "flow:deps": "flow-typed install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "flow focus-check",
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/m3-moretv/smogger"
  },
  "homepage": "https://github.com/m3-moretv/smogger",
  "author": "mrfranke",
  "license": "ISC",
  "dependencies": {
    "@loopback/openapi-v3-types": "^1.0.6",
    "@types/faker": "^4.1.5",
    "@types/koa": "^2.0.48",
    "@types/swagger-parser": "^4.0.2",
    "commander": "^2.19.0",
    "deepmerge": "^2.2.1",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "koa": "^2.6.1",
    "koa-router": "^7.4.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "random": "^2.0.12",
    "source-map-support": "^0.5.10",
    "swagger-parser": "^6.0.3",
    "tsc": "^1.20150623.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "babel-core": "^7.0.0-bridge",
    "babel-jest": "^23.6.0",
    "jest": "^23.6.0"
  }
}
